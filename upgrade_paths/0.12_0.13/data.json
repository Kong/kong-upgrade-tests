[
  [ "simple_api", "POST", "/apis", {
    "name": "simple_api",
    "hosts": [ "simple-api.com" ],
    "upstream_url": "http://simple-api.com/api"
  }],

  [ "complex_api", "POST", "/apis", {
    "name": "complex_api",
    "hosts": "complex-api.com",
    "methods": "GET",
    "uris": "/secret, /public",
    "upstream_url": "http://complex-api.com/api"
  }],

  [ "basic_auth_api", "POST", "/apis", {
    "name": "basic_auth_api",
    "hosts": "basic-auth-api.com",
    "upstream_url": "http://basic-auth-api.com"
  }],

  [ "consumer_1", "POST", "/consumers", { "username": "consumer_1" } ],
  [ "consumer_2", "POST", "/consumers", { "username": "consumer_2" } ],
  [ "consumer_3", "POST", "/consumers", { "username": "consumer_3" } ],

  [ "_", "POST", "/plugins", {
    "name": "key-auth",
    "*api_id": "simple_api.id"
  }],

  [ "_", "POST", "/plugins", {
    "name": "acl",
    "*api_id": "simple_api.id",
    "config": {
      "blacklist": [ "/get/forbidden-by-acl" ]
    }
  }],

  [ "_", "POST", "/plugins", {
    "name": "basic-auth",
    "*api_id": "basic_auth_api.id"
  }],

  [ "_", "POST", "/consumers/consumer_1/basic-auth", {
    "username": "consumer_1",
    "password": "secret"
  }],

  [ "_", "POST", "/plugins", {
    "name": "bot-detection",
    "*api_id": "simple_api.id"
  }],

  [ "_", "POST", "/plugins", {
    "name": "request-size-limiting",
    "*consumer_id": "consumer_2.id",
    "config": {
      "allowed_payload_size": 1
    }
  }],

  [ "_", "POST", "/plugins", {
    "name": "request-termination",
    "*api_id": "complex_api.id",
    "*consumer_id": "consumer_3.id",
    "config": {
      "status_code": 403,
      "message": "request terminated via request-termination plugin"
    }
  }],

  [ "_", "POST", "/plugins", {
    "name": "correlation-id",
    "*api_id": "simple_api.id"
  }],

  [ "_", "POST", "/plugins", {
    "name": "cors",
    "*api_id": "complex_api.id"
  }]

]
